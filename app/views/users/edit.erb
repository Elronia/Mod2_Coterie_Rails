<div class="container">
<h1> Edit <%= @current_user.full_name%>'s Profile </h1>

<div class="col-md-6">
<%= form_for @current_user do |f| %>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.text_field :first_name, placeholder: "First Name", class: "form-control input-lg"%>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control input-lg"%>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.text_field :username, placeholder: "Username", class: "form-control input-lg"%>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.text_area :bio, placeholder: "Bio", class: "form-control input-lg"%>
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, class: "form-control input-lg"%>
        </div>
    </div>
    <%= f.submit "Update", class: 'btn button-color btn-block height-45' %>
<% end %>
</div>
</div>