<div class="container">
    <div class="row">
    <div class="col-md-6 col-md-offset-3 transparent-bg">
    <h1 class="text-center"> Create a Meeting! </h1>

    <%= form_for @meeting, class: 'row' do |f| %>
        <div class="col-md-12">
        <div class="form-group">
            <%= f.label :subcategory %>
            <%= f.collection_select :subcategory_id, @subcategories, :id, :name, {}, { class: 'form-control ft-sz-18'} %>
        </div>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control ft-sz-18' %>
        </div>
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control ft-sz-18' %>
        </div>
        <div class="input-group">
            <%= f.label :time %><br>
            <%= f.datetime_select(:time, { :default => { :hour => 23, :minute => 59 } }) %>
        </div>
        <br>
    <%= f.submit "Create Meeting", class: 'btn button-color btn-block btn-lg ft-sz-18' %>
    </div>
    <% end %>
    </div>
    </div>
    </div>
</div>