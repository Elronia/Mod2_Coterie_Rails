<div class="container container-fluid meeting-show">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 transparent-bg">
            <h1 class="text-center"> Edit a Meeting! </h1>
                <%= form_for([@meeting.user, @meeting]) do |f| %>
                    <div class="col-md-12 m-b-20">
                        <div class="form-group">
                            <%= f.hidden_field :user_id, :value => @current_user.id %>
                            <%= f.label :title %>
                            <%= f.text_field :title, class: 'form-control' %>
                        </div>
                        <div class="form-group">
                            <%= f.label :description %>
                            <%= f.text_area :description, class: 'form-control' %>
                        </div>
                        <div class="input-group">
                            <%= f.label :time %>
                            <%= f.datetime_select(:time, :default => { :hour => 23, :minute => 59 }) %><br>
                        </div>
                    </div>
                    <%= f.submit "Update Meeting", class: "btn button-color btn-round user-btn btn-block"%>
                <% end %>
            <br>
            <%= button_to 'Delete Meeting', { controller: :meetings, action: :destroy, id: @meeting.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn button-color btn-round user-btn btn-block' %>
        </div>
    </div>
</div>    