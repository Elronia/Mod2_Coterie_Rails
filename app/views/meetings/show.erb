

<div class="container container-fluid meeting-show">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2><strong><%= @meeting.title %> </strong> </h2>
            <p><strong>Category: </strong><%= @meeting.category.name %></p>
            <p><strong>Subcategory: </strong><%= @meeting.subcategory.name %></p>
            <p><strong>When?</strong> <%= @meeting.datetime%></p>
            <p><strong>Number of Attendees: </strong> <%= @meeting.users.count %></p>

            <p> <strong> Host: </strong> <%= link_to @meeting.user.full_name, profile_path(@meeting.user.id) %> </p>

            <p> <strong> Description: </strong> <%= @meeting.description %> <br>


            <p><a href="/registrations/new?meeting_id=<%= @meeting.id %>" class="btn btn-block button-color">Want to Register?</a></p>
        </div>
    </div>
</div>