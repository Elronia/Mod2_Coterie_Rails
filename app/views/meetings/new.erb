<h1>Create a Meeting!</h1>

<%# CAN WE DISPLAY SUBCATEGORIES BASED ON THE SPECIFIC CATEGORY?? %>

<%= form_for @meeting do |f| %>
<%= f.label :subcategory %> <%#this list is way too long. parse through category first.%>
<%= f.collection_select :subcategory_id, @subcategories, :id, :name %><br>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :description %>
<%= f.text_area :description %><br>
<%= f.label :time %>
<%= f.datetime_select(:time, :default => { :hour => 23, :minute => 59 }) %><br>
<%= f.submit "Create Meeting"%>
<% end %>

